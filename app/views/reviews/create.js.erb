<% if @review.valid? %>
$.growl.notice({message: "Thank you for your review"})
$('#reviewNotice').html("Thank you for your review");
$('#reviewList').append("<%= escape_javascript render 'review'%>");
$('#new_review')[0].reset();
$('#reviewError').hide();
setTimeout(function(){
	$('#reviewNotice').slideUp();
},5000);
<%else%>
$.growl.error({message: "Tumse naa hopai...."})
$('#reviewError').html("<%= escape_javascript render 'error'%>");
<%end%>
